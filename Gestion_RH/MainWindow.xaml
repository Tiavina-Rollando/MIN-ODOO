<Window x:Class="Gestion_RH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion_RH"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <StackPanel Margin="10">

                <TextBox x:Name="NomDepartementTextBox" Margin="400,10,400,10" Width="500"/>
                <Button Content="Ajouter" Click="Ajouter_Click" Margin="10,10,1300,10" Width="200"/>
                <StackPanel Visibility="{Binding AjoutVisible, Converter={StaticResource BoolToVisConverter}}">
                    <Button Content="Ajouter département" Click="AjouterDepartement_Click" Margin="10,10,1300,10" Width="200"/>
                    <Button Content="Ajouter postes" Click="AjouterDepartement_Click" Margin="10,10,1300,10" Width="200"/>
                    <Button Content="Ajouter nations" Click="AjouterDepartement_Click" Margin="10,10,1300,10" Width="200"/>
                    <Button Content="Ajouter employés" Click="AjouterDepartement_Click" Margin="10,10,1300,10" Width="200"/>
                </StackPanel>

                <Button Content="Afficher tableau" Click="Afficher_Click" Margin="1300,10,10,10" Width="200"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,10" Visibility="{Binding AfficherVisible, Converter={StaticResource BoolToVisConverter}}">
                    <Button Content="Liste département" Click="AfficherDepartement_Click" Width="200"/>
                    <Button Content="Liste postes" Click="AfficherPoste_Click" Width="200"/>
                    <Button Content="Liste nations" Click="AfficherNation_Click" Width="200"/>
                    <Button Content="Liste roles" Click="AfficherRole_Click" Width="200"/>
                </StackPanel>

                <!-- DataGrid pour afficher les départements -->
                <DataGrid x:Name="DepartementsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Visibility="{Binding DepartementsVisible, Converter={StaticResource BoolToVisConverter}}">
                    <DataGrid.Columns>
                        <!-- Colonne pour l'ID -->
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>

                        <!-- Colonne pour le nom du département -->
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>

                        <!-- Colonne pour le poste vacant -->
                        <DataGridTextColumn Header="Poste Vacant" Binding="{Binding PostVaccant}" Width="400"/>

                        <!-- Colonne pour le bouton Supprimer -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="SupprimerDepartement_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0">
                                        <Image Source="Assets/trash-icon.png" Width="20" Height="20" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- DataGrid pour afficher les postes -->
                <DataGrid x:Name="PostesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Visibility="{Binding PostesVisible, Converter={StaticResource BoolToVisConverter}}">
                    <DataGrid.Columns>
                        <!-- Colonne pour l'ID -->
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>

                        <!-- Colonne pour le statut du poste -->
                        <DataGridTextColumn Header="Statut" Binding="{Binding StatutTexte}" Width="400"/>

                        <!-- Colonne pour le nom du poste -->
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="400"/>

                        <!-- Colonne pour le departement -->
                        <DataGridTextColumn Header="Departement" Binding="{Binding NomDepartement}" Width="*"/>

                        <!-- Colonne pour le bouton Supprimer -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="SupprimerDepartement_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0">
                                        <Image Source="Assets/trash-icon.png" Width="20" Height="20" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- DataGrid pour afficher les nations -->
                <DataGrid x:Name="NationsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Visibility="{Binding NationsVisible, Converter={StaticResource BoolToVisConverter}}">
                    <DataGrid.Columns>
                        <!-- Colonne pour l'ID -->
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>

                        <!-- Colonne pour le nom du pays -->
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>

                        <!-- Colonne pour le poste vacant -->
                        <DataGridTextColumn Header="Peuple" Binding="{Binding Peuple}" Width="400"/>

                        <!-- Colonne pour le bouton Supprimer -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="SupprimerDepartement_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0">
                                        <Image Source="Assets/trash-icon.png" Width="20" Height="20" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- DataGrid pour afficher les roles -->
                <DataGrid x:Name="RolesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Visibility="{Binding RolesVisible, Converter={StaticResource BoolToVisConverter}}">
                    <DataGrid.Columns>
                        <!-- Colonne pour l'ID -->
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>

                        <!-- Colonne pour le nom du role -->
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>

                        <!-- Colonne pour le bouton Supprimer -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="SupprimerDepartement_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0">
                                        <Image Source="Assets/trash-icon.png" Width="20" Height="20" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
