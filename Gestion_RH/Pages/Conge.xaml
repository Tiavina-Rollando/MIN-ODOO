<Page x:Class="Gestion_RH.Pages.Conge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestion_RH.Pages"
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:conv="clr-namespace:Gestion_RH.Converters"
      xmlns:view="clr-namespace:Gestion_RH.ViewModels"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      Title="Conge">

    <Page.Resources>
        <Storyboard x:Key="ShowNotificationPanel">
            <DoubleAnimation Storyboard.TargetName="NotificationPanel"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetName="NotificationPanel"
                         Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                         From="-20" To="0" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="HideNotificationPanel">
            <DoubleAnimation Storyboard.TargetName="NotificationPanel"
                     Storyboard.TargetProperty="Opacity"
                     From="1" To="0" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetName="NotificationPanel"
                     Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                     From="0" To="-20" Duration="0:0:0.3" />
        </Storyboard>

        <Style x:Key="NoHoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style des lignes alternées -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#D6EAF8"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5"  Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="DarkGray"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="DarkBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- ✅ Barre de navigation (fixe) -->
            <ColumnDefinition Width="250"/>
            <!-- ✅ Contenu (scrollable) -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="MenuPanel" Visibility="Visible" Grid.Column="0" Background="#2C3E50" Padding="10">
            <Grid>
                <!-- Définition des lignes pour organiser l'affichage -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Section du menu en haut -->
                    <RowDefinition Height="*"/>
                    <!-- Espace qui pousse "Quitter" en bas -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bouton Quitter en bas -->
                </Grid.RowDefinitions>

                <!-- ✅ Contenu du menu (haut) -->
                <StackPanel Grid.Row="0">
                    <Button Cursor="Hand" Height="45" Click="BtnNotifications_Click" Margin="5" FontSize="14" Style="{StaticResource RoundedButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Bell" Margin="5" Width="22" HorizontalAlignment="Left" Height="24"/>
                            <TextBlock Text="Notification" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Separator/>
                    <Calendar Name="calConge" SelectedDatesChanged="calConge_SelectedDatesChanged" />
                    <Button Cursor="Hand" Height="45" Margin="5" FontSize="14" Style="{StaticResource RoundedButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="ClockOutline" Margin="5" Width="22" HorizontalAlignment="Left" Height="24"/>
                            <TextBlock Text="Historique" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <!--<Button Cursor="Hand" FontSize="16" x:Name="SupprimerPhotoBoutton" Style="{StaticResource RoundedButtonStyle}"   Content="Supprimer la photo" Click="DeletePhoto_Click" Margin="5" Height="35" Width="200" Visibility="Collapsed"/>-->
                    <Separator/>

                </StackPanel>

                <!-- ✅ Espace qui pousse le bouton "Quitter" en bas -->
                <StackPanel Grid.Row="1"/>

                <Button Cursor="Hand" Height="45" Margin="5" FontSize="14" Style="{StaticResource RoundedButtonStyle}" Click="Home_Click" Grid.Row="2">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="ArrowCircleLeft" Margin="5" Width="22" HorizontalAlignment="Left" Height="24"/>
                        <TextBlock Text="Retour" VerticalAlignment="Center" HorizontalAlignment="Right" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer  Grid.Column="1" VerticalScrollBarVisibility="Auto" Visibility="Visible">
            <StackPanel>
                <!-- 📌 Liste des Employés -->
                <TextBlock Text="Liste des congés" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Visibility="{Binding EmployesVisible, Converter={StaticResource BoolToVisConverter}}"/>

                <DataGrid x:Name="CongesDataGrid" AutoGenerateColumns="False"  CanUserAddRows="False" Visibility="{Binding CongesVisible, Converter={StaticResource BoolToVisConverter}}" Margin="0,10,0,30" CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Motif" Binding="{Binding Motif}" Width="300" CanUserSort="True"/>
                        <DataGridTextColumn Header="Date début" Binding="{Binding Debut}" Width="200" CanUserSort="True"/>
                        <DataGridTextColumn Header="Date fin" Binding="{Binding Fin}" Width="200" CanUserSort="True"/>
                        <DataGridTextColumn Header="Titulaire" Binding="{Binding NomEmploye}" Width="*" CanUserSort="True"/>
                        <DataGridTemplateColumn Header="Statut" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                        <Image Width="20" Height="20" HorizontalAlignment="Left">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="../Assets/en-cours.png"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Statut}" Value="Terminé">
                                                            <Setter Property="Source" Value="../Assets/coche-verte.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Statut}" Value="À venir">
                                                            <Setter Property="Source" Value="../Assets/notification.png"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="{Binding Statut}" HorizontalAlignment="Center" Foreground="Black"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
        
        <ScrollViewer x:Name="NotificationPanel" Grid.Column="0" VerticalScrollBarVisibility="Auto" Visibility="Collapsed" Opacity="0" RenderTransformOrigin="0.5,0">
            <ScrollViewer.RenderTransform>
                <TranslateTransform Y="-20"/>
            </ScrollViewer.RenderTransform>

            <Border  Background="#2C3E50" Padding="10">
                <StackPanel>
                    <Button Cursor="Hand" Height="45" Margin="5" Style="{StaticResource RoundedButtonStyle}" Click="BtnMenu_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="ArrowCircleLeft" Margin="5" Width="22" HorizontalAlignment="Left" Height="24"/>
                        </StackPanel>
                    </Button>
                    <TextBlock Text="Demandes" FontSize="32" Foreground="White" HorizontalAlignment="Center"/>

                    <Separator/>
                    <WrapPanel Orientation="Vertical" Margin="10">
                        <ItemsControl>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f2f2f2" BorderBrush="#ccc" BorderThickness="1" Width="200" Height="110" CornerRadius="10" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Foreground="#2C3E50" TextAlignment="Center"/>
                                            <TextBlock Foreground="Gray" TextAlignment="Center"/>
                                            <TextBlock Foreground="Red" TextAlignment="Center"/>
                                            <Button Content="Voir"  Style="{StaticResource RoundedButtonStyle}" Width="100" Tag="{Binding}" Margin="10,5,0,0" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
